{
    "source": {
        "exclude": ["node_modules"],
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "systemName": "styleguide-o-matic",
